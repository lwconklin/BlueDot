<Window x:Class="BlueDot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Blue Dot" Height="350" Width="525" Icon="pack://application:,,,/Resources/bluedot.ico">
    <DockPanel Margin="0,0,-6.6,-4.6">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Exit" Click="mnuNew_Exit" />
            </MenuItem>
            <MenuItem Header="_About" Click="MenuItem_About">
            </MenuItem>

        </Menu>
        <TextBox AcceptsReturn="True" />
        <Button BorderThickness="0" Background="Transparent" BorderBrush="Transparent" Click="StartButton_Click">
            <StackPanel Height="255" Width="215">
                <Image Source="pack://application:,,,/Resources/blue-dot.png" />
             </StackPanel>
        </Button>

        <Button BorderThickness="0" Background="Transparent" BorderBrush="Transparent" Click="StopButton_Click" Margin="0,5.2,0,0.2" Width="224">
            <StackPanel Height="255" Width="215" >
                <Image Source = "pack://application:,,,/Resources/red-dot.png"/>
            </StackPanel>
        </Button>

    </DockPanel>

</Window>
